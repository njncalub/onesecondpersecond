---
layout: home
title: All Pages
pagination:
  data: collections.all
  size: 20
  alias: entries
permalink: /pages/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
---
<table>
  <thead>
    <th>URL</th>
    <th>Page Title</th>
  </thead>
  <tbody>
{%- for entry in entries %}
  <tr>
    <td><a href="{{ entry.url }}"><code>{{ entry.url }}</code></a></td>
    <td>{{ entry.data.renderData.title or entry.data.title }}</td>
  </tr>
{%- endfor %}
  </tbody>
</table>